{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "model": "Z.AI Coding Plan/GLM-4.7",
  "plugin": [
    "opencode-antigravity-auth@1.2.6",
    "opencode-openai-codex-auth@4.2.0",
    "@nick-vi/opencode-type-inject@1.3.1",
    "@franlol/opencode-md-table-formatter@0.0.3"
  ],
  "instructions": ["../AGENTS.md", "./AGENTS.md", "./instructions/*.md", "./instructions/pre-delivery-checklist.md", "./instructions/security-checklist.md", "./instructions/tdd-workflow.md", "./instructions/error-handling-advanced.md"],
  "agent": {
    "build": {
      "description": "Build mode - create features, components, and modules with full tool access",
      "mode": "primary"
    },
    "plan": {
      "description": "Plan mode - analyze, compare options, review without making changes",
      "mode": "primary",
      "permission": {
        "edit": "deny",
        "bash": "ask"
      }
    }
  },
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    },
    "diff_style": "auto"
  },
  "tools": {
    "bash": true,
    "read": true,
    "write": true,
    "edit": true,
    "glob": true,
    "grep": true,
    "list": true,
    "webfetch": true,
    "task": true,
    "todowrite": true,
    "todoread": true,
    "question": true
  },
  "compaction": {
    "auto": true,
    "prune": true
  },
  "watcher": {
    "ignore": ["node_modules/**", "dist/**", ".git/**", "*.log"]
  },
  "permission": {
    "skill": {
      "*": "allow"
    },
    "bash": {
      "ls *": "allow",
      "rg *": "allow",
      "make *": "allow",
      "echo *": "allow",
      "grep *": "allow",
      "cat *": "allow"
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true,
      "timeout": 60000
    },
    "firecrawl-mcp": {
      "type": "local",
      "command": ["npx", "-y", "firecrawl-mcp"],
      "environment": {
        "FIRECRAWL_API_KEY": "{env:FIRECRAWL_API_KEY}"
      },
      "enabled": false,
      "timeout": 60000
    },
    "web-search-prime": {
        "type": "remote",
        "url": "https://api.z.ai/api/mcp/web_search_prime/mcp",
        "headers": {
